<br>
<table class="table table-hover table-striped table-borderless">
  <thead class="table-dark">
    <tr>
      <th>Number</th>
      <th>Description</th>
      <th>Assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.description %></td>
        <td>
          <% if room.guest!=nil %>
            <%= room.guest.name %>
            <%= link_to 'Check Out', assignment_path(room.assignment.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to "unassigned", new_assignment_path(:rid => room.id)  %>
          <% end %>
        </td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to ' New Room ', new_room_path, class:"btn btn-secondary" %>
